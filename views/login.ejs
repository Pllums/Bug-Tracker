            $("form").submit(function(err){
              err.preventDefault(); // Prevents the page from refreshing
              let $this = $(this); // "this" refers to the form being submitted
              $.post(
                $this.attr("action"),
                $this.serialize(), // Converts data to standard format
                );
            });
            </Script> -->
          </form>
        </div>
      </div>
      <!-- Pills content -->
    </nav>
</div>

<%- include("partials/footer") -%>